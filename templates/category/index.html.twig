{% extends 'layout/layout-center.html.twig' %}

{% block title %}Les catégories
{% endblock %}
{% block body %}
	{% include 'include/_search-data.html.twig' with {form: form} only %}

	<h1 class="text-center text-secondary mb-5 text-uppercase">Catégories</h1>
	<div class="container">
		<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
			{% for category in categories %}
				<div class="col text-center">
					<a href="{{ path("category_show", {'slug': category.slug})}}" class="link-animation btn btn-secondary p-4 mb-5 w-75">{{ category.title|purify }}</a>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
