{% extends 'layout/layout-center.html.twig' %}

{% block title %}Tutoriel - {{ tutorial.name }}
{% endblock %}

{% block body %}
    <div class="">
        <h1 class="text-center text-light mt-5">
            Tutoriel : {{ tutorial.name }}
        </h1>
    </div>
    <div class="container">
        <div class="bg-secondary rounded m-auto mt-5 p-4 col-10">
            <h2 class="text-center mb-2 mt-3"> Objectifs </h2>
            <ul class="text-center list-unstyled mb-5">
                <li>
                    {{ tutorial.objective }}
                </li>
            </ul>


            <div class="row-cols-md-2 d-flex flex-column flex-md-row">
                <div class="col m-auto fw-bold text-center">
                    <p>Clique sur cette vidéo <i class="fa-solid fa-arrow-down"></i></p>
                    <video controls class="rounded mb-4 w-100">
                        <source src=”https://www.youtube.com/watch?v=Rl1mk-AaR8Q” type=video/ogg>
                    </video>
                </div>
                <div class="col m-auto">
                    <p class="p-1 p-md-3 p-lg-5">{{ tutorial.description }} </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

