{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center text-light">On se connaît déjà ?</h1>
		<div class="row">
			<div class="col-6 offset-3">
				<div class="card m-auto bg-secondary align-items-center">
					<div class="card-body">
						<h4 class="card-title text-center">Connexion</h4>
						<form>
							<div class="form-group">
								<label for="inputEmail">E-mail ou nom d'utilisateur</label>
								<input type="email" class="form-control bg-primary text-light" id="inputEmail" aria-describedby="emailHelp" placeholder="E-mail ou nom d'utilisateur">
							</div>
							<div class="form-group">
								<label for="inputPassword">Mot de passe</label>
								<input type="password" class="form-control bg-primary text-light" id="inputPassword" placeholder="Mot de passe">
								<a class="form-text text-muted" href="#" id="emailHelp">Oublié ?</a>
							</div>
							<div class="text-center">
								<a href="{{ path('index_category') }}" class="btn btn-success">Clique ici pour te connecter</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
